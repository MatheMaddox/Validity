{
  "name": "Validity",
  "version": "0.1",
  "description": "Automatically extracts and cross-references facts with ____ to determine truth.",
  "icons": {
		"128": "images/icon.png"
	},
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js", "third_party/jquery-3.3.1.min.js", "scripts/main.js", "config.js", "scripts/analyze.js", "scripts/highlight.js"]
    }
  ],
  "permissions": [
    "https://language.googleapis.com/*",
    "tabs", "<all_urls>"
  ],
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "Validity",
		"default_popup": "popup.html"
  },
  "background": {
  "scripts": ["scripts/popup.js", "config.js", "third_party/jquery-3.3.1.min.js"]
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
